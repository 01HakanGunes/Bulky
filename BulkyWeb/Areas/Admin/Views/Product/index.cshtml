@model List<Product>
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Product List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>New Product
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Title
				</th>
				<th>
					Description
				</th>
				<th>
					ISBN
				</th>
				<th>
					Author
				</th>
				<th>
					List Price
				</th>
				<th>
					Price
				</th>

				<th>
					Price50
				</th>
				<th>
					Price100
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.Title
					</td>
					<td>
						@obj.Description
					</td>
					<td>
						@obj.ISBN
					</td>
					<td>
						@obj.ListPrice
					</td>
					<td>
						@obj.Price
					</td>
					<td>
						@obj.Price50
					</td>
					<td>
						@obj.Price100
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
								class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
							<a asp-controller="Product" asp-action="Remove" asp-route-id="@obj.Id"
								class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i>Remove
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>